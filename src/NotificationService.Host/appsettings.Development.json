{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "Serilog": {
      "MinimumLevel": {
        "Default": "Information",
        "Override": {
          "Microsoft": "Information",
          "Microsoft.Hosting.Lifetime": "Information"
        }
      },
      "WriteTo": [
        {
          "Name": "File",
          "Args": {
            "path": "/app/logs/notification-service.log",
            "formatter": "Elastic.CommonSchema.Serilog.EcsTextFormatter, Elastic.CommonSchema.Serilog",
            "rollingInterval": "Day",
            "retainedFileCountLimit": 7
          }
        },
        {
          "Name": "Console",
          "Args": {
            "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
          }
        }
      ]
    }
  },
  "DatabaseConnectionString": {
    "DefaultConnection": "User ID=${DB_USERNAME};Password=${DB_PASSWORD};Server=${DB_SERVER};Port=${DB_PORT};Database=${DB_NAME};Integrated Security=true; Pooling=true;"
  },
  "SwaggerAuth": {
    "Username": "welwise",
    "Password": "1txqmYkZ-R"
  },
  "Swagger": {
    "Enabled": true
  }
}
